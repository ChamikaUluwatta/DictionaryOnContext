{
  "manifest_version": 2,
  "name": "Dictionary",
  "version": "1.0",
  "description": "Give meaning to words considering the context of the sentence.",
  "browser_specific_settings": {
    "gecko": {
      "id": "u.chamikao2001@gmail.com",
      "strict_min_version": "60.0"
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
    
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "http://localhost/*"  
  ],

  "background": {
    "scripts": ["background.js"]  
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dictionary.js"]
    }
  ]

}