{
  "manifest_version": 2,
  "name": "Dictionary",
  "version": "1.0",
  "description": "Give meaning to words considering the context of the sentence.",
  "applications": {
    "gecko": {
      "id": "u.chamikao2001@gmail.com"
    }
  },
  "icons": {
    "48": "icons/image.png"
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "http://localhost/*"  
  ],

  "background": {
    "scripts": ["background.js"]  
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dictionary.js"]
    }
  ]

}