{
  "manifest_version": 2,
  "name": "Dictionary",
  "version": "1.0",
  "description": "Give meaning to words considering the context of the sentence.",
  "page_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "19": "icons/icon-19.png",
      "32": "icons/icon-32.png",
      "38": "icons/icon-38.png"
    },
    "default_title": "Dictionary",
    "default_popup": "popup/dictionary_addressbar_popup.html",
    "show_matches": ["<all_urls>"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "u.chamikao2001@gmail.com",
      "strict_min_version": "60.0"
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
    
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "http://localhost/*",
    "tabs",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]  
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dictionary.js"]
    }
  ]

}